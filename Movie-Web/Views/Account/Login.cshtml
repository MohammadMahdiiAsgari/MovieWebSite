@model LoginDTO

@{
    ViewData["Title"] = "Login";
}

<section class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-5 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            <h3 class="mb-3 text-center">ورود</h3>
                            <form asp-action="Login" class="mt-4" >
                                <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl"/>
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control mb-0" id="exampleInputEmail3" placeholder="ایمیل را وارد کنید" autocomplete="off">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control mb-0" id="exampleInputPassword2" placeholder="کلمه عبور">
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="remember-me-container">
                                    <input type="checkbox" asp-for="RememberME" />
                                    <label for="RememberMe">مرا به خاطر بسپار</label>
                                </div>

                                <div class="sign-info">
                                    <button type="submit" class="btn btn-hover">ورود</button>
                                    <div class="custom-control custom-checkbox d-inline-block">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                    </div>
                                </div>
                                
                            </form>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-center links">
                            حساب ندارید ؟ <a asp-controller="Account" asp-action="Register" class="text-primary ml-2">ثبت نام</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="reset-password.html" class="f-link">رمز عبور خود را فراموش کرده اید؟</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>