@model RegisterDTO

@{
    ViewData["Title"] = "SignUp";
}

<section class="sign-in-page">
    <div class="container">
        <div class="row justify-content-center align-items-center height-self-center">
            <div class="col-lg-7 col-md-12 align-self-center">
                <div class="sign-user_card ">
                    <div class="sign-in-page-data">
                        <div class="sign-in-from w-100 m-auto">
                            <form asp-action="Register">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>نام کاربری</label>
                                            <input asp-for="UserName" class="form-control mb-0" id="exampleInputEmail2" placeholder="نام کامل را وارد کنید" autocomplete="off" >
                                            <span asp-validation-for="UserName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>ایمیل</label>
                                            <input asp-for="Email" class="form-control mb-0" id="exampleInputEmail3" placeholder="ایمیل را وارد کنید" autocomplete="off" >
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>نام کوچک</label>
                                            <input asp-for="FirstName" class="form-control mb-0" id="exampleInputEmail2" placeholder="نام کوچک" autocomplete="off" >
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>نام خانوادگی</label>
                                            <input asp-for="LastName" class="form-control mb-0" id="exampleInputEmail3" placeholder="نام خانوادگی" autocomplete="off" >
                                            <span asp-validation-for="LastName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>کلمه عبور</label>
                                            <input asp-for="Password" class="form-control mb-0" id="exampleInputPassword2" placeholder="کلمه عبور" >
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>رمز عبور را تکرار کنید</label>
                                            <input asp-for="RePassword" class="form-control mb-0" id="exampleInputPassword2" placeholder="کلمه عبور">
                                            <span asp-validation-for="RePassword"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="custom-control custom-radio mt-2">
                                    <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio1">
                                        ویژه-$39 / 3 ماهه
                                        با 5 روز آزمایش رایگان
                                    </label>
                                </div>
                                <div class="custom-control custom-radio mt-2">
                                    <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio2"> پایه- $19 / 1 ماه</label>
                                </div>
                                <div class="custom-control custom-radio mt-2">
                                    <input type="radio" id="customRadio3" name="customRadio" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio3">رایگان</label>
                                </div>

                                <button type="submit" class="btn btn-hover my-2">ثبت نام</button>

                            </form>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-center links">
                            قبلاً حساب کاربری دارید؟ <a asp-controller="Account" asp-action="Login" class="text-primary ml-2">ورود</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>